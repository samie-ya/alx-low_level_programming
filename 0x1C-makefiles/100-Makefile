CC = gcc

SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY = all clean oclean fclean

all: ${OBJ} m.h
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} ${CFLAGS} -c -o $@ $<

clean:
	${RM} -f *~ ${NAME}
oclean:
	${RM} -f ${OBJ}
fclean: clean oclean
re: oclean all
