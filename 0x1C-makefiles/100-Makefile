CC = gcc

SRC = main.c school.c
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY = all clean oclean fclean re

all: main.o school.o m.h
	${CC} main.o school.o -o ${NAME}

main.o: main.c m.h
	${CC} -Wall -Werror -Wextra -pedantic -c -o main.o main.c

school.o: school.o m.h
	${CC} -Wall -Werror -Wextra -pedantic -c -o school.o school.c

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean: clean oclean

re: oclean all
